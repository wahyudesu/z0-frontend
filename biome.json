{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**/*.{js,jsx,ts,tsx,json,md,mdx,yml,yaml,html}",
			"!!**/node_modules/**/*",
			"!!**/.next/**",
			"!**/dist/**",
			"!**/out/**",
			"!**/.vercel/**"
		]
	},
	"linter": {
		"enabled": false,
		"rules": {
			"recommended": true
		}
	}
}
